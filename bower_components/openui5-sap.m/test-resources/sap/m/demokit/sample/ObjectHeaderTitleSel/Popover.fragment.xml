<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="Select Product"
		placement="Bottom">
		<content>
			<List
				mode="SingleSelectMaster"
				includeItemInSelection="true"
				select="handleItemSelect"
				items="{/ProductCollection}">
				<StandardListItem title="{Name}" />
			</List>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>