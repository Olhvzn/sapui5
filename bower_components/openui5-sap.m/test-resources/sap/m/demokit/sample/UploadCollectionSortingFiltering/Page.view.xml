<mvc:View
	height="100%"
	controllerName="sap.m.sample.UploadCollectionSortingFiltering.Page"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page showHeader="false">
		<UploadCollection
			id="UploadCollection"
			uploadEnabled="false"
			items="{
				path: '/items',
				templateShareable: false,
				sorter: {
					path: 'version',
					descending: false,
					group: true
				},
				groupHeaderFactory: '.getGroupHeader'
			}">
			<toolbar>
				<OverflowToolbar id="myId">
					<Title id="attachmentTitle" />
					<ToolbarSpacer />
					<Button
						type="Transparent"
						icon="sap-icon://drop-down-list"
						tooltip="View settings"
						press="onViewSettingsPressed" />
				</OverflowToolbar>
			</toolbar>
			<infoToolbar>
				<Toolbar
					id="idInfoToolbar"
					active="true"
					press="onInfoToolbarPressed"
					visible="false">
					<Label id="idInfoToolbarLabel" />
					<ToolbarSpacer />
					<core:Icon id="icClearFilters"
						width="2rem"
						src="sap-icon://sys-cancel" />
				</Toolbar>
			</infoToolbar>
			<items>
				<UploadCollectionItem
					documentId="{documentId}"
					fileName="{fileName}"
					mimeType="{mimeType}"
					thumbnailUrl="{thumbnailUrl}"
					url="{url}"
					attributes="{
						path: 'attributes',
						templateShareable: false
					}"
					statuses="{
						path: 'statuses',
						templateShareable: false
					}"
					selected="{selected}">
					<attributes>
						<ObjectAttribute
							title="{title}"
							text="{
								parts: ['text', 'type'],
								formatter: '.formatAttribute'
							}" />
					</attributes>
					<statuses>
						<ObjectStatus
							title="{title}"
							text="{text}"
							state="{state}" />
					</statuses>
				</UploadCollectionItem>
			</items>
		</UploadCollection>
	</Page>
</mvc:View>
