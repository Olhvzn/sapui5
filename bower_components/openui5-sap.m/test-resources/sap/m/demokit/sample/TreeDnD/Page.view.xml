<mvc:View
	controllerName="sap.m.sample.TreeDnD.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:dnd="sap.ui.core.dnd">
	 	<Tree
		    id="Tree"
		    items="{path: '/'}">
		    	<dragDropConfig>
					<dnd:DragDropInfo
							sourceAggregation="items"
							targetAggregation="items"
							dragStart="onDragStart"
							drop="onDrop"/>
				</dragDropConfig>
			<StandardTreeItem title="{text}"/>
		</Tree>
</mvc:View>