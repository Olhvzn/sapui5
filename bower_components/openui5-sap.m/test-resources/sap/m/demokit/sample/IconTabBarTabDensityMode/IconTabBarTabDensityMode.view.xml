<mvc:View
	controllerName="sap.m.sample.IconTabBarTabDensityMode.IconTabBarTabDensityMode"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form">

	<Panel>
		<f:SimpleForm labelSpanL="6"
					  labelSpanM="6"
					  editable="true"
					  layout="ResponsiveGridLayout">
			<f:content>
				<Label text="Tab Density Mode" />
				<RadioButtonGroup id="TabDensityModeRBG"
								  columns="3"
								  select="onTabDensityModeSelect">
					<buttons>
						<RadioButton id="Mode-Cozy"
									 text="Cozy">
						</RadioButton>
						<RadioButton id="Mode-Compact"
									 text="Compact">
						</RadioButton>
						<RadioButton id="Mode-Default"
									 text="Inherit">
						</RadioButton>
					</buttons>
				</RadioButtonGroup>
			</f:content>
		</f:SimpleForm>
		<IconTabBar
				id="idIconTabBar0"
				showOverflowSelectList="true"
				enableTabReordering="true"
				class="sapUiResponsiveContentPadding">
		</IconTabBar>
		<IconTabBar
			id="idIconTabBar3"
			expanded="{device>/isNoPhone}"
			class="sapUiResponsiveContentPadding">
