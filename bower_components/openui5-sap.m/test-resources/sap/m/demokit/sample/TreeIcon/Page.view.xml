<mvc:View
	controllerName="sap.m.sample.TreeIcon.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	 	<Tree
			id="Tree"
			items="{path: '/'}">
			<headerToolbar>
				<OverflowToolbar>
					<Title
						text="Tree" />
					<ToolbarSpacer />
					<ToggleButton
						icon="sap-icon://menu"
						tooltip="Enable / Disable Custom Context Menu"
						press="onToggleContextMenu" />
				</OverflowToolbar>
			</headerToolbar>
			<StandardTreeItem
				title="{text}"
				icon="{ref}"/>
		</Tree>
</mvc:View>