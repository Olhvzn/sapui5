<mvc:View
	controllerName="sap.m.sample.FeedListItem.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<List
				headerText="Feed Entries"
				items="{/EntryCollection}" >
				<FeedListItem
					sender="{Author}"
					icon="{AuthorPicUrl}"
					senderPress="onPress"
					iconPress="onPress"
					iconDensityAware="false"
					info="{Type}"
					timestamp="{Date}"
					text="{Text}"
					convertLinksToAnchorTags="All"
					actions="{path: 'Actions', templateShareable: false}">
					<FeedListItemAction text="{Text}" icon="{Icon}" key="{Key}" press="onActionPressed" />
				</FeedListItem>
			</List>
		</l:content>
	</l:VerticalLayout>
</mvc:View>