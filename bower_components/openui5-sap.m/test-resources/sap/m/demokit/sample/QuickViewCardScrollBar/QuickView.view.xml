<core:View height="100%"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		controllerName="sap.m.sample.QuickViewCardScrollBar.QuickView">
	<Page id="quickViewCardExamplePage" showHeader="false" class="sapUiContentPadding" showNavButton="false">
		<content>
			<Button id="buttonBack"
					enabled="false"
					text="Navigate Back"
					press="onButtonBackClick"
					class="sapUiSmallMarginBottom">
			</Button>
			<l:Grid class="sapUiNoMarginBegin"
					hSpacing="0"
					vSpacing="0"
					defaultSpan="L6 M6 S10">
				<Label text="Show Vertical Scroll Bar:"
						class="sapUiSmallMarginTop">
					<layoutData>
						<l:GridData span="L3 M6 S8"/>
					</layoutData>
				</Label>
				<Switch id="showHideScrollSwitch"
						state="true"
						class="sapUiSmallMarginBottom"
						change="onScrollSwitchChange">
					<layoutData>
						<l:GridData span="L9 M6 S4"/>
					</layoutData>
				</Switch>

				<Label text="Show Header:"
						class="sapUiSmallMarginTop">
					<layoutData>
						<l:GridData span="L3 M6 S8"/>
					</layoutData>
				</Label>
				<Switch id="showHideHeaderSwitch"
						state="true"
						class="sapUiSmallMarginBottom"
						change="onHeaderSwitchChange">
					<layoutData>
						<l:GridData span="L9 M6 S4"/>
					</layoutData>
				</Switch>
			</l:Grid>
			<core:Fragment fragmentName="sap.m.sample.QuickViewCardScrollBar.QuickView" type="XML" />
		</content>
	</Page>
</core:View>
