<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		title="Dialog with Segmented Button"
		class="sapUiContentPadding" >
		<content>
			<SegmentedButton selectedKey="SBApproved">
				<items>
					<SegmentedButtonItem icon="sap-icon://employee-approvals" text="Approved" key="SBApproved" />
					<SegmentedButtonItem icon="sap-icon://employee-rejections" text="Rejected" />
					<SegmentedButtonItem icon="sap-icon://employee-lookup" text="Lookup" />
				</items>
			</SegmentedButton>
		</content>
		<beginButton>
			<Button text="Close" press="onCloseDialog" />
		</beginButton>
	</Dialog>
</core:FragmentDefinition>