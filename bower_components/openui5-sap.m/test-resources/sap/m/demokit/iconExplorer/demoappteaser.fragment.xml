<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form">
	<Panel headerText="Browse 600+ Icons" class="sapUiContentPadding" width="100%">
		<l:VerticalLayout width="100%">
			<l:HorizontalLayout>
				<core:Icon src="sap-icon://paper-plane" color="Neutral" size="1.5rem" class="sapUiTinyMarginEnd"/>
				<core:Icon src="sap-icon://paper-plane" color="Neutral" size="2.5rem"/>
				<core:Icon src="sap-icon://paper-plane" color="Neutral" size="4.5rem"/>
				<core:Icon src="sap-icon://paper-plane" color="Neutral" size="6rem"/>
			</l:HorizontalLayout>
			<FlexBox alignContent="Stretch">
				<Label labelFor="iconInput" text="Code:" class="sapUiTinyMarginTopBottom sapUiTinyMarginEnd" design="Bold"/>
				<Input id="iconInput" enabled="false" value="sap-icon://paper-plane"/>
				<Button icon="sap-icon://copy" class="sapUiTinyMarginBegin" type="Emphasized"/>
			</FlexBox>
		</l:VerticalLayout>
	</Panel>
</core:FragmentDefinition>
